<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Capital</th>
            <th>Region</th>
            <th>Flag</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for country in countries %}
        <tr>
            <td>{{ country.name }}</td>
            <td>{{ country.capital }}</td>
            <td>{{ country.region }}</td>
             <td>
                {% if country.flag %}
                     <img src="{{ country.flag }}" alt="{{ country.name }} flag" width="50">
                {% else %}
                    <span>No flag available</span>
                {% endif %}
                
            </td>
            <td>
                <a href="{{ path('app_country_show', {'id': country.id}) }}" class="btn btn-info btn-sm">Show</a>
                <a href="{{ path('app_country_edit', {'id': country.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                <form id="delete-form-{{ country.id }}" action="{{ path('app_country_delete', {'id': country.id}) }}" method="post" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ country.id) }}">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás segura de que quieres eliminar {{ country.name }}?')">Delete</button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
